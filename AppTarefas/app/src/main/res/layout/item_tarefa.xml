<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="96dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TxtTarefa"
                    android:layout_marginBottom="32dp"
                    android:layout_marginStart="16dp"
                    tools:text="tarefa"
                    app:layout_constraintTop_toBottomOf="@+id/TxtNome"
                    app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TxtNome"
                    tools:text="Tarefa 1"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TxtImportancia"
                    tools:text="Alta importancia"
                    android:textSize="10sp"
                    android:text="5sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="72dp"
                    app:layout_constraintTop_toBottomOf="@id/TxtTituloImportancia"
                    app:layout_constraintStart_toEndOf="@id/TxtNome"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TxtTituloImportancia"
                    tools:text="Alta importancia"
                    android:text="Importancia"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="72dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/TxtNome"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>