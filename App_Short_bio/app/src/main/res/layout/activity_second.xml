<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sobre"
            android:textSize="32sp"
            android:id="@+id/TxtTitulo"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:textSize="24sp"
            android:id="@+id/TxtNome"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@id/TxtTitulo"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="resultado:"
    android:textSize="16sp"
    android:id="@+id/TxtRsNome"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@id/TxtNome"
    app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idade:"
            android:textSize="24sp"
            android:id="@+id/TxtIdade"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@id/TxtRsNome"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="resultado:"
            android:textSize="16sp"
            android:id="@+id/TxtRsIdade"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/TxtIdade"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hobbys:"
            android:textSize="24sp"
            android:id="@+id/TxtHobby"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@id/TxtRsIdade"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="resultado:"
            android:textSize="16sp"
            android:id="@+id/TxtRsHobby"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/TxtHobby"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="voltar"
            android:id="@+id/BtnVoltar"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>